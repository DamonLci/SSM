<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
<!--        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/GoodsSystem?useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=true</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        &lt;!&ndash; 运行时的运行环境 &ndash;&gt;
        &lt;!&ndash; SQL dialect &ndash;&gt;
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        &lt;!&ndash; Drop and re-create the database schema on startup &ndash;&gt;
        <property name="hbm2ddl.auto">update</property>

        &lt;!&ndash; C3P0连接池设定&ndash;&gt;
        &lt;!&ndash; 使用c3po连接池 配置连接池提供的供应商&ndash;&gt;
        <property name="connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
        &lt;!&ndash;在连接池中可用的数据库连接的最少数目 &ndash;&gt;
        <property name="c3p0.min_size">5</property>
        &lt;!&ndash;在连接池中所有数据库连接的最大数目 &ndash;&gt;
        <property name="c3p0.max_size">20</property>
        &lt;!&ndash;设定数据库连接的过期时间,以秒为单位,
        如果连接池中的某个数据库连接处于空闲状态的时间超过了timeout时间,就会从连接池中清除 &ndash;&gt;
        <property name="c3p0.timeout">120</property>
        &lt;!&ndash;每3000秒检查所有连接池中的空闲连接 以秒为单位&ndash;&gt;
        <property name="c3p0.idle_test_period">3000</property>

        &lt;!&ndash; 设置事务的隔离级别 &ndash;&gt;-->
        <property name="hibernate.connection.isolation">8</property>

<!--
        <mapping class="org.book.bean.UserBean"></mapping>
        <mapping class="org.book.bean.CommentBean"></mapping>
        <mapping class="org.book.bean.GoodsBean"></mapping>-->

    </session-factory>
</hibernate-configuration>