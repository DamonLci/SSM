<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDao">

    <insert id="insert" parameterType="UserBean"
            useGeneratedKeys="true" keyProperty="uid">
  		insert into user(username,userpwd) values(#{username},#{userpwd});
  	</insert>


    <select id="findByName" parameterType="String" resultMap="map">
  		select *
  		 from user where username=#{userName}
  	</select>
    <!-- 输出映射为hashmap id:map的名称   type：映射成什么样的对象 -->
    <resultMap id="map" type="UserBean">
        <id property="uid" column="uid"></id>
        <result property="userName" column="username"></result>
        <result property="userPwd" column="userpwd"></result>
    </resultMap>


</mapper>